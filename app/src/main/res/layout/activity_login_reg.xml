<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_reg">

    <ScrollView
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dip"
            android:layout_marginTop="50dip">

            <ImageView
                android:layout_marginBottom="25dip"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/plant"
                android:layout_width="150dip"
                android:layout_height="150dip" />

            <LinearLayout
                android:layout_marginBottom="50dip"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginStart="75dip"
                android:layout_marginEnd="75dip"
                android:layout_width="250dip"
                android:layout_height="45dip">

                <LinearLayout
                    android:id="@+id/goto_login"
                    android:background="@drawable/button_styling_left"
                    android:layout_weight="1"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textLogin"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Login" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gotoregister"
                    android:background="@drawable/button_styling_right"
                    android:layout_weight="1"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textReg"
                        android:textColor="#26D129"
                        android:textStyle="bold"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Register"
                        app:cornerRadius="20dip" />

                </LinearLayout>


            </LinearLayout>


            <com.google.android.material.textfield.TextInputEditText
                android:visibility="visible"
                android:id="@+id/reg_name"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dip"
                android:layout_marginEnd="50dip"
                android:layout_marginBottom="10dip"
                android:background="@drawable/edittext_drawable"
                android:drawableStart="@mipmap/ic_action_profile"
                android:drawablePadding="5dip"
                android:paddingStart="15dip"
                android:paddingEnd="15dip"
                android:hint="Name"
                android:inputType="text"
                android:padding="10dip"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_email"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dip"
                android:layout_marginEnd="50dip"
                android:layout_marginBottom="10dip"
                android:background="@drawable/edittext_drawable"
                android:drawableStart="@mipmap/ic_action_email"
                android:drawablePadding="5dip"
                android:paddingStart="15dip"
                android:paddingEnd="15dip"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dip" />



            <com.google.android.material.textfield.TextInputLayout
                app:passwordToggleEnabled="true"
                app:hintEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/login_pass"
                    android:layout_gravity="center_horizontal"
                    android:inputType="textPassword"
                    android:layout_marginTop="15dip"
                    android:layout_marginEnd="50dip"
                    android:layout_marginStart="50dip"
                    android:layout_marginBottom="10dip"
                    android:padding="5dip"
                    android:background="@drawable/edittext_drawable"
                    android:drawablePadding="5dip"
                    android:hint="Password"
                    android:paddingStart="15dip"
                    android:paddingEnd="15dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_action_pass"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_address"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dip"
                android:layout_marginEnd="50dip"
                android:layout_marginBottom="10dip"
                android:background="@drawable/edittext_drawable"
                android:drawableStart="@mipmap/ic_action_reg_address"
                android:drawablePadding="5dip"
                android:paddingStart="15dip"
                android:paddingEnd="15dip"
                android:hint="Address"
                android:inputType="textEmailAddress"
                android:padding="10dip"
                android:visibility="gone"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reg_mobno"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dip"
                android:layout_marginEnd="50dip"
                android:layout_marginBottom="10dip"
                android:background="@drawable/edittext_drawable"
                android:drawableStart="@mipmap/ic_action_reg_mobno"
                android:drawablePadding="5dip"
                android:paddingStart="15dip"
                android:paddingEnd="15dip"
                android:hint="Mobile No."
                android:inputType="number"
                android:padding="10dip"
                android:visibility="gone"
                />



            <RelativeLayout
                android:layout_marginBottom="50dip"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/loginBtn"
                    app:cornerRadius="50dip"
                    android:layout_centerInParent="true"
                    android:text="LOG IN"
                    android:layout_marginEnd="50dip"
                    android:layout_marginStart="50dip"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:height="55dp"
                    android:layout_marginTop="15dip"
                    android:backgroundTint="#26D129"
                    />
                <com.google.android.material.button.MaterialButton
                    android:visibility="invisible"
                    android:id="@+id/regBtn"
                    app:cornerRadius="50dip"
                    android:layout_centerInParent="true"
                    android:text="Register"
                    android:layout_marginEnd="50dip"
                    android:layout_marginStart="50dip"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:height="55dp"
                    android:layout_marginTop="15dip"
                    android:backgroundTint="#26D129"
                    />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>



